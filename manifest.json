{
  "$schema": "./manifest_schema.json",
  "manifest_version": 4,
  "type": "extension",
  "name": "快速移除会话",
  "slug": "QuicklyRemoveConversations",
  "description": "使用滚轮（或自定义快捷键）快速删除聊天会话功能，就像在各种软件中一键关闭标签页一样。",
  "version": "1.1.0",
  "icon": "./favicon.svg",
  "thumb": "./favicon.svg",
  "authors": [
    {
      "name": "jiang-taibai",
      "link": "https://github.com/jiang-taibai"
    }
  ],
  "platform": [
    "win32",
    "linux",
    "darwin"
  ],
  "injects": {
    "renderer": "./src/renderer.js",
    "main": "./src/main.js",
    "preload": "./src/preload.js"
  },
  "repository": {
    "repo": "jiang-taibai/LiteLoaderQQNT-Quickly-Remove-Conversations",
    "branch": "main",
    "release": {
      "tag": "1.1.0",
      "file": "LiteLoaderQQNT-Quickly-Remove-Conversations.zip"
    }
  }
}
